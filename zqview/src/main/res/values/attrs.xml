<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SmTextView">

        <attr name="sm_autoRound" format="boolean" />
        <attr name="sm_bgColor" format="color" />
        <attr name="sm_bgColor_sel" format="color" />
        <attr name="sm_roundRadius" format="dimension" />
        <attr name="sm_gradient" format="boolean" />
        <attr name="sm_gradient_orientation" format="enum">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="LEFT_RIGHT" value="6" />
            <enum name="TL_BR" value="7" />
        </attr>
        <attr name="sm_bgColorFrom" format="color" />
        <attr name="sm_bgColorFromSel" format="color" />
        <attr name="sm_bgColorTo" format="color" />
        <attr name="sm_bgColorToSel" format="color" />
        <attr name="sm_textColor" format="color" />
        <attr name="sm_textColorSel" format="color" />

    </declare-styleable>

</resources>